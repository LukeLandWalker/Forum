<% provide(:title, "New post") %>
<h1>New post</h1>

<div class="row">
  <div class="span10 offset1">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_message', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :content %>
      <%= f.text_area :content, rows: 10 %>
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to 'Back', posts_path %>
